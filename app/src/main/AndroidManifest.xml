<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dhwani_android.drawables_and_styles">

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BasicDrawableActivity"
            android:label="@string/title_activity_view_style" >
        </activity>
        <activity
            android:name=".LayerListActivity"
            android:label="@string/title_activity_layer_list" >
        </activity>
        <activity
            android:name=".NinePatchActivity"
            android:label="@string/title_activity_nine_path" >
        </activity>
        <activity
            android:name=".StylesActivity"
            android:label="@string/title_activity_styles" >
        </activity>
        <activity
            android:name=".ThemesActivity"
            android:theme="@style/SpecialActivityTheme"
            android:label="@string/title_activity_themes" >
        </activity>
    </application>

</manifest>